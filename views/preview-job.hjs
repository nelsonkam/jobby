<body>
  <div class="container shadow-bottom" style="margin-top: .375rem; margin-bottom: .375rem;">
    <div class="columns">
      <div class="column col-12 col-mx-auto">
        <header class="navbar" style="margin-left: 3%; margin-right: 3%;">
          <section class="navbar-section">
            <a href="/" class="navbar-brand">
              <img src="jobby_purpled.png" class="mt-1" style="height: 42px;" alt="Logo">
            </a>
          </section>
          <section class="navbar-section">
            <a href="#" class="navbar-brand mb-1 btn btn-primary" style="font-size: .8rem;">Publier une annonce</a>
          </section>
        </header>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="columns" style="margin-top: 1.8rem; margin-left: 3.5%; margin-right: 5%;">
      <div class="column col-6 col-mx-auto">
        <h3>Aperçu de l'offre</h3>
        <div class="divider"></div>
        <div class="role-desc">
    <div class="columns">
      <div class="column col-7">
        <h4 class="text-gray">Description du role</h4>
        <div class="columns" style="margin-top: 1.5rem;">
          <div class="column col-1 mr-2 mt-1">
            <figure class="avatar avatar-xl">
              <img src="{{ company_logo }}" alt="Logo">
            </figure>
          </div>
          <div class="column ml-2">
            <div class="h5">{{position}}</div>
            <div class="text-gray">{{company_name}} &ndash; {{location}}</div>
            <div class="text-bold">{{min_salary}}k-{{max_salary}}k FCFA</div>
          </div>
        </div>
        <p style="margin-top: 1rem;">{{company_description}}</p>
        <h4>Compétences & Pré-requis</h4>
        <ul>
          {{#profile}}
            <li>{{.}}</li>
          {{/profile}}
        </ul>
        <h4>Responsabilités</h4>
        <ul>
         {{#responsabilities}}
            <li>{{.}}</li>
          {{/responsabilities}}
        </ul>
        <h4>Avantages</h4>
        <ul>
          {{#benefits}}
            <li>{{.}}</li>
          {{/benefits}}
        </ul>
        <h4>Tags</h4>
        <div class="d-flex">
          <span class="label p-2 mx-1 label-rounded">UI/UX</span>
          <span class="label p-2 mx-1 label-rounded">JavaScript</span>
          <span class="label p-2 mx-1 label-rounded">Airbnb</span>
        </div>
        <div style="margin-top: 2rem;"></div>
      </div>
       <div class="column col-4 col-ml-auto" style="padding-left: 4rem;">
        
        <button class="btn btn-primary btn-lg" style="margin-bottom: 1.5rem;">Postuler à cette offre</button>
        
      </div>
    </div>
